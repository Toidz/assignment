extends ../layout/default.pug

block main
    .section-1 
        h2 Chào mừng bạn!
    h3(style="margin-top:20px") #{lessonCurrent.title}

    .swiper.mySwiper
        .swiper-wrapper
            each item in vocabList
                .swiper-slide
                    .mean #{item.word?item.word:""}
                    img(src=item.image alt="image")
        .swiper-button-next
        .swiper-button-prev
        .swiper-pagination

    // CSS for Swiper
    style.
        .swiper {
            width: 400px;
            height: 400px;
            border-radius: 16px;
        }
        .swiper-slide {
            position: relative;
            display: flex;
            justify-content: center;
            align-items: center;
            background-position: center;
            background-size: cover;
        }

        .swiper-slide .mean {
            position: absolute;
            top: 10px;
            left: 50%;
            transform: translateX(-50%);
            background-color: rgba(0,0,0,0.5); 
            color: #fff;
            padding: 5px 10px;
            border-radius: 5px;
            z-index: 10; 
            white-space: nowrap; 
            font-size:25px;
        }

        .swiper-slide img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 20px;
        }
        .swiper {
            overflow: visible; 
        }

        .swiper-button-next,
        .swiper-button-prev {
            width: 60px;
            height: 60px;
            background-color: rgba(0, 0, 0, 0.5);
            color: #fff; 
            border-radius: 50%;
            top: 50%;
            transform: translateY(-50%);
        }

        .swiper-button-next:hover,
        .swiper-button-prev:hover {
            background-color: rgba(0, 0, 0, 0.8); 
        }
        .swiper-button-next {
            right: -100px;
        }
        .swiper-button-prev {
            left: -100px; 
        }
        .swiper-button-next::after,
        .swiper-button-prev::after {
            font-size: 20px;  
            color: #fff;    
        }
        .swiper-slide img {
            outline: none;      
            border: none;      
            user-select: none; 
        }
        .swiper-slide img {
            -webkit-tap-highlight-color: transparent; 
        }
        @media (max-width: 992px) {
        .swiper{
                width: 350px;
                height: 350px;
            }
        }

        @media (max-width: 576px) {
            .swiper {
                width: 300px;
                height: 300px;
            }
            .swiper-button-next {
                right: -70px;
            }
            .swiper-button-prev {
                left: -70px; 
            }
            .swiper-button-next,
            .swiper-button-prev {
                width: 40px;
                height: 40px;
            }
        }
        @media (max-width: 400px) {
            .swiper {
                width: 200px;
                height: 200px;
            }
            .swiper-button-next {
                right: -50px;
            }
            .swiper-button-prev {
                left: -50px; 
            }
            .swiper-button-next,
            .swiper-button-prev {
                width: 30px;
                height: 30px;
            }

        }
    script(src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js")
    script.
        var swiper = new Swiper(".mySwiper", {
            spaceBetween: 30,
            effect: "fade",      
            loop: true,            
            grabCursor: true,      
            navigation: {
                nextEl: ".swiper-button-next",
                prevEl: ".swiper-button-prev",
            },
            pagination: {
                el: ".swiper-pagination",
                clickable: true,
            },
       
            simulateTouch: true,   
            touchRatio: 1,       
            touchAngle: 45,        
        });
